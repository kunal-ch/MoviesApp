<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:paddingEnd="8dp"
    android:paddingStart="8dp"
    tools:background="@color/dark_grey">

    <TextView
        android:id="@+id/detailsTitleTv"
        style="@style/Rubik.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="Batman The Dark Knight" />

    <TextView
        android:id="@+id/detailsGenresTv"
        style="@style/Rubik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bright_red"
        android:textSize="14sp"
        tools:text="Action | Bruce" />

    <RelativeLayout
        android:id="@+id/detailsDescriptionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:animateLayoutChanges="true"
        android:background="?selectableItemBackground">

        <TextView
            android:id="@+id/detailsDescriptionTv"
            style="@style/Rubik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="5"
            android:textColor="@color/white"
            tools:text="Description" />

        <TextView
            android:id="@+id/detailsDescriptionMoreTv"
            style="@style/Rubik.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/dark_gradient"
            android:paddingBottom="3dp"
            android:paddingTop="24dp"
            android:text="@string/show_more"
            android:textColor="@color/bright_red"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/release_date"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/detailsReleaseTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                tools:text="12.03.1999"
                android:textAlignment="center"
                android:textColor="@color/bright_red"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/rating"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/detailsRatingTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                android:textAlignment="center"
                android:textColor="@color/bright_red"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/runtime"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/detailsRuntimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                android:textAlignment="center"
                android:textColor="@color/bright_red"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="@string/cast"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>
